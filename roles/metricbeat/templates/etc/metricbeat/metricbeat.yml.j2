# {{ ansible_managed }}
metricbeat.config.modules:
  path: ${path.config}/modules.d/*.yml
  reload.enabled: false
  index.number_of_replicas: 0
setup.template.settings:
  index.number_of_shards: 1
  index.number_of_replicas: 0
  index.codec: best_compression
setup.kibana:
  host: "https://data.igln.fr:5601"
output.elasticsearch:
  hosts: ["{{ es_ip_address }}:9200"]
  username: "metricbeat"
  password: "${METRICBEAT_PASSWORD}"
processors:
  - add_host_metadata: ~
  - add_cloud_metadata: ~
setup.ilm.policy_file: "/etc/metricbeat/ilm.json"
setup.ilm.overwrite: true
metricbeat.autodiscover:
  providers:
    - type: docker
      templates:
        - condition:
            contains:
              docker.container.image: mysql
          config:
            - module: mysql
              metricsets: ["status", "galera_status"]
              period: 10s
              hosts: ["tcp(${data.host}:3306)/"]
              username: metricbeat
              password: ${METRICBEAT_DBPASSWORD}
