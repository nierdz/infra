# {{ ansible_managed }}
filebeat.inputs:
- type: log
  paths:
    - /var/log/nginx/*.log
  exclude_files: ['\.gz$']
  fields:
    filebeat_nginx: true
  fields_under_root: true

- type: log
  paths:
    - /var/log/syslog
  fields:
    filebeat_syslog: true
  fields_under_root: true

- type: log
  paths:
    - /var/log/mail.log
  fields:
    filebeat_mail: true
  fields_under_root: true

output.logstash:
  hosts: ["localhost:5044"]
